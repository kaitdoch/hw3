<h1>New Post</h1>

<form action="/entries" method="post">
  <p>
    <label for="title">Title</label>
    <input type="text" name="title" id="title">
  </p>
  <p>
    <label for="description">Description</label>
    <input type="text" name="description" id="description">
  </p>
  <p>
    <label for="occurred_on">Occurred On</label>
    <input type="date" name="occurred_on" id="occurred_on">
  </p>

<!-- transfer state from the previous action to the next -->
  <p>
    <label for="place_id">Place</label>
<!-- Show the name (for display only, not submitted) -->
    <input type="text" value="<%= @place["name"] %>" disabled>
<!-- Submit the ID (invisible to the user) -->
    <input type="hidden" name="place_id" value="<%= @place["id"] %>">
  </p>

  <button>Submit</button>
</form>